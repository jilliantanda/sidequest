<%- include('./partials/head.ejs') %>

    <body id="editpage">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <img src="https://i.imgur.com/yb3A5DS.jpeg" alt="Logo" width="40" height="34"
                    class="d-inline-block align-text-top">
                <a class="navbar-brand" href="/">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Navigation
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/questlog">Back to quest log</a></li>
                                <li><a class="dropdown-item" href="/newquest">Add your next advanture</a></li>
                                

                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="editcontainer">
            <form action="/questlog/<%=quest._id%>?_method=PUT" id="editform" method="POST">
                <label for="Title" class="form-label">Title:</label>
                <input type="text" value="<%=quest.title%>" class="form-control" name="title">


                <label for="description">Description:</label>
                <textarea class="form-control" name="description" id="exampleFormControlTextarea1" value="<%=quest.description%>"rows="3"></textarea>

                <label for="Photo" class="form-label">Add an inspiration photo:</label>
                <input type="text" value="<%=quest.imageUrl%>" class="form-control" name="imageUrl">

                <label class="form-check-label" for="exampleCheck1">Has this quest been completed?</label>
                <input type="checkbox" name="<%=quest.isCompleted%>" <% if(quest.isCompleted===true){ %> 
                checked
                <% } %> />
                    <select class="form-select" aria-label="Default select example">
                        <option selected>What type of quest is this?</option>
                        <option value="Travel">Travel</option>
                        <option value="Experience">Experience</option>
                        <option value="Life Goal">Life Goal</option>
                    </select><br>
                    <button type="submit" class="btn btn-secondary btn-lg">Submit updated quest</button>
            </form>
        </div>
        <%- include('./partials/body.ejs') %>

    </body>